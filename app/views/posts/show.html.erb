<h1 style="text-align:center">
  <%= @post.title %>
</h1>

<div style="display:flex; flex-direction:column; justify-content:center; align-items:center">
  <div style="width:80%">
    <%= simple_format(@post.body) %>
  </div>
  <% if user_signed_in? %>
    <p>Author: <%=@post.user.user_name %></p>
  <% end %>
</div>
